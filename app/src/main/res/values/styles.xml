<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!-- md dialog -->
    <!--<style name="orderDialog">-->
        <!--<item name="md_corner_radius">16dp</item>-->
    <!--</style>-->

    <!-- Toolbar blue -->
    <style name="AppToolBar">
        <item name="android:layout_weight">0</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Toolbar white -->
    <style name="AppToolBarWhite">
        <item name="android:layout_weight">0</item>
        <!--<item name="android:background">#fff</item>-->
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <!-- button style-->
    <style name="LargeBlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <!-- medium filled blue button style-->
    <style name="mediumFilledBlueButton">
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/rounded_corner_button_filled</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <!-- medium  light blue button style-->
    <style name="mediumLightBlueButton">
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <!-- edit text layout style -->
    <style name="StyledTilEditTextTheme">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>
</resources>
